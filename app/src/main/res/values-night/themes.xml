<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SuperMarioChars" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Customize your light theme here. -->

        <!-- Estilo personalizado para la fuente -->
        <item name="fontFamily">@font/super_mario</item>
        <item name="android:textColor">@color/colorTextGray</item>

        <item name="colorPrimary">@color/mario_blue_dark_Night</item>
        <item name="colorPrimaryVariant">@color/mario_blue_dark</item>
        <item name="colorAccent">@color/button_dark</item>

        <item name="colorOnPrimary">@color/background_dark</item>
        <item name="colorSecondary">@color/mario_red_light</item>
        <item name="colorSecondaryVariant">@color/mario_red_dark_Night</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/text_dark</item>


        <!-- Card View . -->
        <item name="cardViewStyle">@style/CustomCardViewStyle</item>

        <!-- Estilo personalizado para el RecyclerView -->
        <item name="recyclerViewStyle">@style/RecyclerViewStyle</item>

        <!-- SpashCreen configuration -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_supermario</item>
        <item name="android:windowSplashScreenBackground">@color/mario_blue_dark_Night</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/mario_red_dark_Night</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

        <item name="toolbarStyle">@style/CustomToolbarStyle</item>



    </style>

    <style name="Theme.SuperMarioChars" parent="Base.Theme.SuperMarioChars" />


    <!-- Action bar CustomStyle . -->
    <style name="CustomToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/mario_blue_dark_Night</item>
        <item name="titleTextColor">@color/button_dark</item> <!-- Color del título -->
        <item name="android:elevation">4dp</item> <!-- Sombra -->
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto -->
        <item name="android:gravity">center_vertical</item> <!-- Color del título -->
        <!--    <item name="actionMenuTextColor">@color/mario_yellow</item> &lt;!&ndash; Color del texto &ndash;&gt;
            <item name="tintNavigationIcon">@color/mario_yellow</item> &lt;!&ndash; Color del texto &ndash;&gt;
            <item name="android:buttonTint">@color/mario_yellow</item> &lt;!&ndash; Color del texto &ndash;&gt;
            <item name="popupMenuBackground">@color/mario_yellow</item> &lt;!&ndash; Color del texto &ndash;&gt;
            <item name="actionBarItemBackground">@color/mario_yellow</item> &lt;!&ndash; Color del texto &ndash;&gt;
            <item name="android:actionMenuTextColor">@color/mario_yellow</item> &lt;!&ndash; Color de los íconos &ndash;&gt;
            <item name="navigationIconTint">@color/mario_yellow</item>  Color del ícono del toggle-->

    </style>

    <!-- CardView CustomStyle. -->
    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/mario_blue_dark_Night</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textColor">@color/button_dark</item> <!-- Color del texto -->
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto -->
        <item name="android:textStyle">bold</item> <!-- Negrita -->
        <item name="android:gravity">center_vertical</item> <!-- Centrado -->
    </style>

    <!-- RecyclerView CustomStyle. -->
    <style name="RecyclerViewStyle">
        <item name="android:background">@color/mario_red_dark_Night</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Color de la flecha hacia atrás -->
        <item name="android:background">@color/mario_blue_dark_Night</item>
        <item name="titleTextColor">@color/button_dark</item> <!-- Color del título -->
        <item name="android:elevation">4dp</item> <!-- Sombra -->
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto -->
        <item name="android:gravity">center_vertical</item> <!-- Color del título -->
        <item name="colorControlNormal">@color/button_dark</item>


    </style>

    <style name="CustomPopupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/background_light</item>
        <item name="android:background">@color/text_dark</item>
    </style>



</resources>